@model IEnumerable<LibraryClient.Models.Livre>

@{
    ViewData["Title"] = "Index";
}



<div class="d-flex flex-column justify-content-center " style="display: block; text-align: center; justify-content:center; margin-left:10%">

    <div class="nav" style="display: flex;">
        <!----------------------------------  Barre de recherche -------------------------------------------------->
        <div class="text-center">
            <input name="query" aria-label="search" autocomplete="off" class="search-field" id="sm"
                   placeholder="Rechercher par titre, auteur, série" type="search" value="" />
        </div>
        <div>
            <button style="background-color: #33C198; border-color: #33C198;">Chercher</button>
        </div>
    </div>


    <!----------------------------------  Liste des livres -------------------------------------------------->
    <div class="d-flex flex-wrap align-items-stretch">
            @foreach (var item in Model) {
                

				<div class="book card border-success shadow" style=" margin: 10px; width: 22%">
                        <!--  Image --->

				    <a asp-action="Details" asp-route-id="@item.Id">

					    <img class="card-img-top " alt="Le Quatrième homme eBook by Lisa Gardner"
						     src="@Html.DisplayFor(modelItem => item.ImageWeb)" />

					    <!--  Infos du livre --->
				    </a>

                    <div class="card-body">
					    
                            <h4 class="title card-title ">@Html.DisplayFor(modelItem => item.Titre)</h4>
                            <div class="auteur card-text">@Html.DisplayFor(modelItem => item.Auteur.Nom)</div>
                                
                    </div>
				        
                        <p style="margin-bottom:0% ;">
                    <a href="" class="btn " style="width:100%;height:100%;background-color: #33C198; border-color: #33C198;border-radius:0;" role="button">Emprunter</a>
                        </p>
                </div>
		            
                

                
            
            }
    </div>
</div>




