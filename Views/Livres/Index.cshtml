    .nav {
       
    }

    .container {
        margin-left: 10px;
    }

    .margin {
        
    }

    

    input {
        padding: 5px;
        width: 800px;
        margin-bottom: 70px;
        margin-top: 10px;
        border-radius: 10px;
    }

    button {
        margin-top: 12px;
        padding: 4px;
        border-radius: 8px;
        margin-left: 10px;
    }

    .grid {
        
    }

    .decoration {
        text-decoration: none;
    }
